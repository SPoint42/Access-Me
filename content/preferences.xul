        <preferences>
            <preference id="prefNumParallellAttacks"
                        name="extensions.accessme.numtabstouse"
                        type="int"/>
            <preference id="prefPauseBetweenTests"
                        name="extensions.accessme.pausebetweentests"
                        type="int" />
            <preference id="prefSimilarityFactor"
                        name="extensions.accessme.similarityfactor"
                        type="int" />
        </preferences>
        <label value="Number of simultaneous attacks" control="txtNumParallellAttacks" />
        <textbox id="txtNumParallellAttacks" preference="prefNumParallellAttacks" />
        <label value="Wait time between testing" control="txtPauseBetweenTests" />
        <textbox id="txtPauseBetweenTests" preference="prefPauseBetweenTests" />
        <label value="String how similar does a test page have to be to the original page to not trigger an error"
                control="txtSidebarBuildingPause"
                crop="end" />
	<textbox id="txtSimilarityFactor" preference="prefSimilarityFactor"/>
    </prefpane>
    <!-- would be nice to have a nice red X icon for here -->
    <prefpane label="Error Regex's" id="errorstrings">
        <preferences>
        </preferences>
        <script type="application/x-javascript" src="chrome://accessme/content/json.js" />
        <script type="application/x-javascript" src="chrome://accessme/content/io.js" />
        <script type="application/x-javascript" src="chrome://accessme/content/util.js" />
        <script type="application/x-javascript" src="chrome://accessme/content/preferenceStringContainer.js" />
        <script type="application/x-javascript" src="chrome://accessme/content/ErrorStringContainer.js" />
        <script type="application/x-javascript" src="chrome://accessme/content/attackParamDetectRegexContainer.js" />
        <script type="application/x-javascript" src="chrome://accessme/content/preferences.js" />
        <hbox>
            <button label="export" oncommand="preferencesController.exportAttacks()" />
            <button label="import" oncommand="preferencesController.importAttacks()" />
        </hbox>
        <groupbox>
            <caption label="Error Regex" />
            <description>
                Error regexs are strings that are found in pages where the result is submitted and signify that the test has FAILED.
            </description>
            <label style="visibility:hidden;color: red" value="No error strings, please enter some" id="noerrorslbl" />
            <hbox>
                <listbox id="existingErrorDetectionRegex" rows="10" seltype="multiple" flex="1">
                </listbox>
                <vbox>
                    <button label="up" oncommand="preferencesController.moveErrorStringUp()"/>
                    <button label="down" oncommand="preferencesController.moveErrorStringDown()"/>
                    <button label="add" oncommand="window.openDialog('chrome://accessme/content/addError.xul', 'attackstring', 'chrome', errorStringContainer, preferencesController, window)"/>
                    <button label="remove" oncommand="preferencesController.removeError()"/>
                </vbox>
            </hbox>
        </groupbox>
    </prefpane>
    <!-- would be nice to have a target icon -->
    <prefpane label="Params to Attack" id='paramsToAttack'>
        <preferences>
        </preferences>
        <hbox>
            <button label="export" oncommand="preferencesController.exportDetectRegEx()" />
            <button label="import" oncommand="preferencesController.importDetectRegEx()" />
        </hbox>
        <groupbox>
            <caption label="Attack Parameter Detection RegEx's" />
            <label value="Enter the regex's which will match to the paramters you want to test." />
            <label style="visibility:hidden;color: red" value="No paramregexs, please enter some" id="noregexlbl" />
            <hbox>
                <listbox id="existingAttackParamDetectRegex" rows="10" seltype="multiple" flex="1">
                </listbox>
                <vbox>
                    <button label="up" oncommand="preferencesController.moveDetectRegExStringUp()"/>
                    <button label="down" oncommand="preferencesController.moveDetectRegExStringDown()"/>
                    <button label="add" oncommand="window.openDialog('chrome://accessme/content/addDetectRegEx.xul', 'DetectRegEx', 'chrome', detectRegExContainer, preferencesController, window)"/>
                    <button label="remove" oncommand="preferencesController.removeDetectRegEx()"/>
                </vbox>
            </hbox>
        </groupbox>
    </prefpane>
    <script>
        window.addEventListener("load", function(){preferencesController = new PreferencesController()}, false);
    </script>
</prefwindow>
